#include "ANN.h"

/*
 * Empty constructor
 */
ANN::ANN(){}


/*
 * Constructor method. Create a new ANN configuring setting:
 * - number of layers (including input & output layers)
 * - number of neurons in each layer
 * - weights of each neuron connection.
 */
ANN::ANN(int layers, int *layerSizes, double ***weights){
  int i, j, k;
  /*
   * memory allocation
   */
  _layerSizes = new int[layers];

  _outputs = new double*[layers];
  for(i=0; i<layers; ++i)
    _outputs[i]=new double[layerSizes[i]];

  _weights = new double**[layers];
  for(i=1; i<layers; ++i)
    _weights[i]=new double*[layerSizes[i]];
  for(i=1; i<layers; ++i)
    for(j=0; j<layerSizes[i]; ++j)
      _weights[i][j]=new double[layerSizes[i-1]+1];

  /*
   * data copy
   */
  _layers = layers;

  for(i=0; i<layers; ++i)
    _layerSizes[i] = layerSizes[i];

  for(i=1; i<layers; ++i)
    for(j=0; j<layerSizes[i]; ++j)
      for(k=0; k<layerSizes[i-1]+1; ++k)
	_weights[i][j][k]= weights[i][j][k];
}

/*
 * Process a new input
 */
void ANN::feedforward(double *input){

}

/*
 * Get a network output of the last processing.
 */
double ANN::result(int i){
  return _output[_layers-1][i];

}

/*
 * Destructor method
 */
ANN::~ANN(){
  int i, j;
  /*
   * Free all dynamic memory
   */
  for(i=1; i<_layers; ++i)
    for(j=0; j<_layerSizes[i]; ++j)
      delete[] _weights[i][j];
  for(i=1; i<_layers; ++i)
    delete[] _weights[i];
  delete[] _weights;

  for(i=0; i<_layers; ++i)
    delete[] _outputs[i];
  delete[] _outputs;

  delete[] _layerSizes;
}

