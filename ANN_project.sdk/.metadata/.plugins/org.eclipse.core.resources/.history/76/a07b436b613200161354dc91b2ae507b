#include "ANN.h"


/*
 * Empty constructor
 */
ANN::ANN(){}


/*
 * Constructor method. Create a new ANN configuring setting:
 * - number of layers (including input & output layers)
 * - number of neurons in each layer
 * - weights of each neuron connection.
 */
ANN::ANN(int layers, int *layerSizes, double ***weights){
  int i, j, k;
  /*
   * memory allocation
   * Take into account the first layer's neurons (input) don't have weights
   */
  _layerSizes = new int[layers];

  _outputs = new double*[layers];
  for (i=0; i<layers; ++i)
    _outputs[i] = new double[layerSizes[i]];

  _weights = new double**[layers];
  for (i=1; i<layers; ++i)
    _weights[i] = new double*[layerSizes[i]];
  for (i=1; i<layers; ++i)
    for (j=0; j<layerSizes[i]; ++j)
      _weights[i][j] = new double[layerSizes[i-1]+1];

  /*
   * data copy
   */
  _layers = layers;

  for (i=0; i<layers; ++i)
    _layerSizes[i] = layerSizes[i];

  for (i=1; i<layers; ++i)
    for (j=0; j<layerSizes[i]; ++j)
      for (k=0; k<layerSizes[i-1]+1; ++k)
	_weights[i][j][k] = weights[i][j][k];
}

/*
 * Destructor method
 */
ANN::~ANN(){
  int i, j;
  /*
   * Free all dynamic memory
   */
  for(i=1; i<_layers; ++i)
    for(j=0; j<_layerSizes[i]; ++j)
      delete[] _weights[i][j];
  for(i=1; i<_layers; ++i)
    delete[] _weights[i];
  delete[] _weights;

  for(i=0; i<_layers; ++i)
    delete[] _outputs[i];
  delete[] _outputs;

  delete[] _layerSizes;
}

/*
 * Process a new input
 */
void ANN::feedforward(double *input){
  int i, j, k;
  double sum;

  /*
   * copy data to input layer
   */
  for (i=1; i<_layers; ++i)
    _outputs[0][i] = input[i];

  /*
   * Process each neuron output taking in account their weight untill getting
   * the last output values, that are the result.
   *
   * Check the Feedforward Artificial Neuronal Network's documentation for more
   * information.
   *
   */
  for (i=1; i<_layers; ++i){
      for (j=0; j<_layerSizes[i]; ++j){
	  sum = 0.0;
	  /*
	   * Neuron's entries from each previous layer neuron
	   */
	  for (k=0; k<_layerSizes[i-1]; ++k)
	    sum += _outputs[i-1][k] * _weights[i][j][k];
	  /*
	   * bias
	   */
	  sum += _weights[i][j][_layerSizes[i-1]];
	  /*
	   * SIGMOID as neuron function
	   */
	  _outputs[i][j] = 1/(1+exp(-sum));
      }
  }
}

/*
 * Get a network output of the last processing.
 */
double ANN::result(int i){
  return _outputs[_layers-1][i];
}



