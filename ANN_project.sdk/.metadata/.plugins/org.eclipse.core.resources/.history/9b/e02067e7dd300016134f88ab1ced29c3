#ifndef ANN_h
#define ANN_h

/*
 * Back-propagation trainer class
 */
class ANN{
  /*
   * private Variables
   */
private:
  double ***weights, **outputs;
  int layers, *layerSizes;

  /*
   * Public methods
   */
public:
  ~ANN();
  ANN(int layers, int layerSizes, double ***weights);
  feedforward(double *input);
  result(int)


};

#endif
