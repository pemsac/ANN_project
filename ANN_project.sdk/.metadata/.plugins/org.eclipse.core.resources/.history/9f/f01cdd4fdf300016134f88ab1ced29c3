/*
 * Header guard
 */
#ifndef ANN_h
#define ANN_h

/*
 * Back-propagation trainer class
 */
class ANN{

private:
  /*
   * private variables:
   * weight & output value of each neuron
   * number of layers & of neurons in each one.
   */
  double ***_weights, **_outputs;
  int _layers, *_layerSizes;

public:
  /*
   * Destructor method
   */
  virtual ~ANN();
  /*
   * Constructor method. Create a new ANN configuring setting:
   * - number of layers (including input & output layers)
   * - number of neurons in each layer
   * - weights of each neuron connection.
   */
  ANN(int layers, int layerSizes, double ***weights);
  /*
   * Process a new input
   */
  void feedforward(double *input);
  /*
   * Get a network output of the last processing.
   */
  double result(int i);
};

#endif
