#include <iostream>
#include <fstream>
#include "ff.h"

using namespace std;

int main()
{
  ifstream file;
  FATFS fileSystem;
  FRESULT fStatus;
  int num1=0;

  fStatus = f_mount(&fileSystem, "0:/", 0);
  if (fStatus != FR_OK)
    {
      cerr<<"ERROR"<<endl;
      return 0;
    }

  file.open("testN.txt");

  if (file.is_open())
    cout << "error" << endl;
  else
    {
      cout << "Hello world" << endl;

      cout << file.width() << endl;
    }

  return 0;
}
